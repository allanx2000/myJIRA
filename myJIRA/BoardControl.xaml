<UserControl x:Class="myJIRA.BoardControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:myJIRA"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <GroupBox Header="{Binding BoardName, FallbackValue=BoardName}">
        <ListBox ItemsSource="{Binding ItemsList}" Width="300" 
                 VerticalContentAlignment="Stretch" 
                 ScrollViewer.VerticalScrollBarVisibility="Visible"
                 DisplayMemberPath="Title">
            <!--ItemTemplateSelector="{Binding TemplateSelector}"-->

        </ListBox>
    </GroupBox>
</UserControl>
