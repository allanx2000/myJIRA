<UserControl x:Class="myJIRA.UserControls.BoardControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:myJIRA"
             xmlns:uc="clr-namespace:myJIRA.UserControls"
             mc:Ignorable="d" 
             
             d:DesignHeight="300" d:DesignWidth="300">

    <UserControl.Resources>
        <ItemContainerTemplate x:Key="TitleTemplate">
            <StackPanel>
                <Label>
                    <TextBlock DataContext="{Binding Data}" Text="{Binding Title}"/>
                </Label>
            </StackPanel>    
        </ItemContainerTemplate>
        
        <ItemContainerTemplate x:Key="ExpandedTemplate">
            <StackPanel Orientation="Vertical">
                <Label FontWeight="Bold">
                    <TextBlock DataContext="{Binding Data}" Text="{Binding Title}"/>
                </Label>

                <Grid Margin="10 0 0 0" DataContext="{Binding Data}" >
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <Label Grid.Row="0" Grid.Column="0" FontWeight="Bold" Style="{StaticResource GridField}">Key:</Label>
                    <Label Grid.Row="0" Grid.Column="1" Content="{Binding JiraKey}"/>

                    <Label Grid.Row="0" Grid.Column="2" FontWeight="Bold" Style="{StaticResource GridField}">Status:</Label>
                    <Label Grid.Row="0" Grid.Column="3" Content="{Binding Status}"/>
                </Grid>

            </StackPanel>
        </ItemContainerTemplate>

        <uc:BoardTemplateSelector x:Key="TemplateSelector"
            Collapsed="{StaticResource TitleTemplate}" Expanded="{StaticResource ExpandedTemplate}"/>
    </UserControl.Resources>

    <GroupBox Header="{Binding BoardName, FallbackValue=BoardName}">
        <ListBox ItemsSource="{Binding ItemsList}" Width="300" 
                 VerticalContentAlignment="Stretch"
                 HorizontalContentAlignment="Stretch"
                 ScrollViewer.VerticalScrollBarVisibility="Visible"
                 ItemTemplateSelector="{StaticResource TemplateSelector}">
        </ListBox>
    </GroupBox>
</UserControl>
